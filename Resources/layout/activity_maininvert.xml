<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/rego1"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#32322F"
        android:textFontWeight="600"
        android:textSize="25dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="10dp"
        android:text="Join Our Community and\n Help People in Need."
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#8F8F8E"
        android:textFontWeight="300"
        android:textSize="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="30dp"
        android:text="We are a charity organization whose primary objectives are philanthropy, social well-being, serving the public interest and common good"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#767677"
        android:textFontWeight="300"
        android:textSize="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="30dp"
        android:text="Login With Your Google or Facebook Account Right Now and Join U"
        android:fontFamily="sans-serif-light"/>

    


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook" 
            android:id="@+id/FacebookSignInBtn"
            android:padding="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/google"
            android:id="@+id/GoogleSignBtn"/>
    </LinearLayout>

     <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/togetherwechange" 
            android:padding="5dp"
            android:gravity="center|bottom"/>

</LinearLayout>
