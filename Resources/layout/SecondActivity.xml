<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/rego1"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical | center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Getting Location ....."
            android:layout_margin="10dp"
        android:id="@+id/LocationText"/>


    </LinearLayout>
     <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click Here to Report an issue"
        android:textStyle="bold"
        android:textColor="#151626"
            android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
       /> 

    <ImageView
        android:layout_width="match_parent"
        
        android:maxHeight="400dp"
        android:src="@drawable/camera"
        android:layout_height="130dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        
        android:id="@+id/CameraImage"/>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
       android:src="@drawable/donate"
        android:layout_gravity="center"
        android:id="@+id/CameraText"
        android:layout_marginBottom="30dp"/>
     <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:textColor="#151626"
            android:text="Please Support US By Watching Ads"
        android:textStyle="bold"
            android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
       /> 
        <ImageView
        android:layout_width="match_parent"
         android:layout_height="130dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
       android:src="@drawable/ads"
        android:layout_gravity="center"
        android:id="@+id/AdsImage"/>
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
       android:src="@drawable/watchads"
        android:id="@+id/AdsText"
        android:layout_gravity="center"/>
</LinearLayout>
