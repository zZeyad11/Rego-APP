<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#E4E9ED">  

        <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:padding="75dp"
         android:scaleType="centerCrop"
         android:layout_gravity="center_horizontal"
         android:src="@drawable/camera"
         android:id="@+id/CameraSelect"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
            android:background="#FFFFFF">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Tap on The Photo Icon To Report"
            android:textColor="#000"
                android:textStyle="bold"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country : Egypt"
                android:id="@+id/CountryName"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:textSize="7.5pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Region : El-Dakhalia"
                android:id="@+id/RegionName"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="7.5pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City : El-Dakhalia"
                android:id="@+id/CityName"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="7.5pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude: 30.964657\nLongitude: 31.173924"
                android:id="@+id/LocationDonate"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="7.5pt"/>

              <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Mention Your Comments Below:"
               android:textColor="#000"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="6pt"
                android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:textSize="12dp"
            android:id="@+id/textuernameInputLayout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:id="@+id/Comment"
                android:maxLength="500"
                android:hint="Comment"
                android:singleLine="false" >                
                </EditText>
        </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/500"
                android:id="@+id/Limitlength"
                android:textSize="4pt"
                android:gravity="end"
                android:layout_marginStart="55dp"
            android:layout_marginEnd="50dp"
                />
           
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Your Feedback:"
              android:textColor="#000"
                
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="6pt"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"> 
            <ImageView
                android:layout_width="50dp"
                    android:id="@+id/Smileface1"
                android:layout_height="match_parent"
                    android:padding="4dp"
                    android:src="@drawable/face1"/> 
             <ImageView
                android:layout_width="50dp"
                    android:id="@+id/Smileface2"
                android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:visibility="gone"
                    
                android:src="@drawable/face2"/>
                    <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                    android:id="@+id/Smileface3"
                    android:padding="4dp"
                android:src="@drawable/face3"/>
                    <ImageView
                android:layout_width="50dp"
                    android:id="@+id/Smileface4"
                android:layout_height="match_parent"
                    android:padding="4dp"
                android:src="@drawable/face4"/>
                    <ImageView
                android:layout_width="50dp"
                    android:id="@+id/Smileface5"
                android:layout_height="match_parent"
                    android:padding="4dp"
                android:src="@drawable/face5"/>
            </LinearLayout>

    </LinearLayout>
   
      
     
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_gravity="bottom | right"
            android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
     <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="56dp"
        android:layout_gravity="right"
            android:layout_marginEnd="2dp"
            android:scaleType="center"
            android:id="@+id/myFab"
            android:src="@drawable/ic_send"/>
    
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click To Submit"
            android:textColor="#000"
               
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:textSize="6pt"
                android:textStyle="bold"/>
    </LinearLayout>
      
</android.support.design.widget.CoordinatorLayout>
